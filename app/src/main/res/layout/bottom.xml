<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="66dp"
    android:layout_gravity="bottom"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/id_tab1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_img1"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_account_balance_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_img2"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_anchor_24" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_add"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_add_circle_24" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_tab3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_img3"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_brightness_1_24" />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/id_tab4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/id_tab_img4"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="#00000000"
            android:clickable="false"
            android:scaleType="fitXY"
            android:src="@drawable/ic_baseline_cloud_24" />

    </LinearLayout>

</LinearLayout>